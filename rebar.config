{sub_dirs,["deps"]}.
{erl_opts,
 [{i, "include"},
  {src_dirs, ["src", "test"]},
  {parse_transform, lager_transform},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_missing_spec,
  warn_untyped_record,
  no_debug_info,
  native,
  {hipe,
   [o3]}
]}.
{edoc_opts,
 [{hidden,  true},
  {private, true},
  {todo,    true}]}.
{deps, [
  {worker_pool, ".*",  {git, "git://github.com/inaka/worker_pool.git", "1.0.2"}},
  {lager,       "2.*", {git, "git://github.com/basho/lager.git",       "2.0.3"}}
]}.
